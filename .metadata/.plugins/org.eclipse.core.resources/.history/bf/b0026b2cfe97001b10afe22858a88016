<title>Registro de Contatos</title>
<link rel="stylesheet" type="text/css" href="siteContato.css">

</head>
<body>
<script type="text/javascript">
function validaContatos(){
	var nome = document.dadosdecontato.txtnome.value;// receber o valor do campo txtnome em uma variável
	var expRegNome = new RegExp("^[A-zÀ-ü]{3,}([ ]{1}[A-zÀ-ü]{2,})+$");//Criado um objeto RegExp e atribuido a variável expRegNome
	
if(!expRegNome.test(nome)){
	alert("Preencha o campo Nome corretamente. ");
		document.dadosdecontato.txtnome.focus();/*motivo de após o "ok" ir direto ao input do Nome, devido ao focus*/
		return false;/*impede o envio do formulário e de seguir a leitura dos códigos*/
	}

var fone  =  document.dadosdecontato.txtfone.value;
var expRegFone = new RegExp("^[(]{1}[1-9]{2}[)]{1}[0-9]{4,5}[-]{1}[0-9]{4}$");

if(!expRegFone.test(fone)){
	alert("Preencha o campo Telefone corretamente. ");
		document.dadosdecontato.txtfone.focus();
		return false;
	}

if(document.dadosdecontato.txtend.value==""){
	alert("Favor preencha o campo do Endereço corretamente. ");
		document.dadosdecontato.txtend.focus();
		return false;
	}

return true;/* Confirma que o formulário pode ser enviado*/
}
</script>
<section>
<div class="blocoForm">
	<form name="dadosdecontato" method="get" action="#" class="formContato" onsubmit="return validaContatos()">
		<fieldset>
			<legend>Contato</legend>
			<label for="nome">Nome Completo:</label> <input type="text" name="txtnome"  id="nome" placeholder="Nome">
			<label for="fone">Telefone:</label> <input type="text" name="txtfone" placeholder=(99)9999-9999 id="fone"> 
			<label for="end">Endereço:</label> <input type="text" name="txtend"  id="end">  
			<button type="reset">Limpar</button> <button type="submit">Enviar</button>
			<table>
				<tr>

					<td></td>
				</tr>
			</table>
		</fieldset>
	</form>
	</div>
</section>	
</body>

</html>